<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginVertical="50dp">

        <!--progress bar implementation-->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:backgroundTint="@color/green_500"
            android:background="@drawable/design_ring_shape"
            android:progressDrawable="@drawable/home_circular_progressbar"
            android:max="60"
            android:min="10"
            android:textAlignment="center" />
        <!--Text implementation in center of the progress bar-->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Running"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
        android:id="@+id/progress_layout1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp">

        <!--progress bar implementation-->
        <ProgressBar
            android:id="@+id/temp_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:background="@drawable/design_circular_shape"
            android:progressDrawable="@drawable/home_circular_progressbar"
            android:max="60"
            android:min="10"
            android:textAlignment="center" />
        <!--Text implementation in center of the progress bar-->
        <TextView
            android:id="@+id/temp_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/black"
            android:textSize="22sp"/>


    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/progress_layout2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">

            <!--progress bar implementation-->
            <ProgressBar
                android:id="@+id/humid_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:background="@drawable/design_circular_shape"
                android:progressDrawable="@drawable/home_circular_progressbar"
                android:progressTint="@color/blue_700"
                android:max="100"
                android:min="0"
                android:textAlignment="center" />
            <!--Text implementation in center of the progress bar-->
            <TextView
                android:id="@+id/humid_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="---"
                android:textColor="@color/black"
                android:textSize="22sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>